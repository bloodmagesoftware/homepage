---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

export interface Props {
  h1?: boolean;
}
---

<!doctype html>
<html lang="en" class="bg-neutral-900 text-neutral-300">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Bloodmage Software</title>
  </head>
  <body class="flex flex-col min-h-dvh">
    <div class="flex-grow">
      <Header h1={Astro.props.h1 ?? false} />
      <main class="px-2 md:px-0">
        <slot />
      </main>
    </div>
    <Footer />
    <script src="../scripts/content.ts"></script>
  </body>
</html>
