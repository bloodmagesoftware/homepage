---
import { twMerge } from "tailwind-merge";

export interface Props {
  address: string;
  class?: string;
}

const { address } = Astro.props;
---

<a
  class={twMerge("inline-block underline", Astro.props.class)}
  data-email={btoa(address)}
  >{Astro.slots.has("default") ? <slot /> : btoa(address)}</a
>
